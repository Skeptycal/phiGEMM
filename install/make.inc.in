PHIGEMM_TOP = .

AR          = @ar@
ARFLAGS     = @arflags@

CC          = @cc@
FC          = @f90@
LD          = @cc@
CPPFLAGS    = @cppflags@
CFLAGS      = -O3 -openmp -fPIC
LD_FLAGS    = --shared -O3 -openmp -fPIC

NVCC        = @nvcc@
NVCC_FLAGS  = -ccbin icc -O3 --compiler-options '-fPIC -openmp'
NVCC_DFLAGS  = --shared

EXT_INC     = @cuda_include@
CUDA_LIB    = @cuda_libs@
LD_LIB      = @blas_libs@ @ld_libs@

CUDA_PATH   = @cuda_path@
CUDA_MAJOR  = @cudamajor@

GEMM_OPT    = @phigemm_opts@